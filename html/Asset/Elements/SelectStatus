<& /Elements/SelectStatus, %ARGS &>
<%init>
if ($AssetObj and $AssetObj->Id) {
    $ARGS{DefaultLabel} = loc("[_1] (Unchanged)", loc($AssetObj->Status));
    $ARGS{Default} = $DECODED_ARGS->{Status} || $ARGS{Default};
    $ARGS{Object} = $AssetObj;
} else {
    $ARGS{DefaultValue} = 0;
    $ARGS{Default} ||= $DECODED_ARGS->{Status} || RT::Asset->Lifecycle->DefaultOnCreate;
    $ARGS{Statuses} = [ RT::Asset->Lifecycle->Transitions('') ];
}
</%init>
<%args>
$AssetObj => undef
</%args>
